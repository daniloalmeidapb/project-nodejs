<% include ../header %>
    <header>
        <h2>Ntalk - Edit Contact</h2>
    </header>
    <section class="edit">
        <div class="container">
            <div class="card">
                <div class="card-body">
                    <form class="form-inline" action="/contacts/<%- contact._id %>?_method=put" method="post">

                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">
                                        <i class="fas fa-user"></i>
                                    </span>
                                </div>
                                <input class="form-control" type="text" name="contact[name]" value="<%= contact.name %>">
                            </div>
                        </div>

                        <div class="form-group mx-sm-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">
                                        <i class="fas fa-at"></i>
                                    </span>
                                </div>
                                <input class="form-control" type="text" name="contact[email]" value="<%= contact.email %>">
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <% include ../exit %>
        <% include ../footer %>