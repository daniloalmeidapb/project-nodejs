<% include ../header %>
<header>
    <h2>Ntalk - Edit Contact</h2>
</header>
<section class="edit">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <form class="form-inline" action="/contacts/<%- contact._id %>?_method=put" method="post">
                    <div class="form-group">
                        <label>Name:</label>
                        <input class="form-control mx-sm-1" type="text" name="contact[name]" value="<%= contact.name %>">
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input class="form-control mx-sm-1" type="text" name="contact[email]" value="<%= contact.email %>">
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>
                </form>
            </div>
        </div>
    </div>
</section>
<% include ../exit %>
<% include ../footer %>