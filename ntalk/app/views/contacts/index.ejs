<% include ../header %>
<header>
    <h2>Ntalk - Contact Sheduler</h2>
</header>
<section class="container">
    <div class="form-register">
        <div class="card">
            <div class="card-body">
                <form class="form-inline" action="/contacts" method="post">
                    
                    <div class="form group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">
                                    <i class="fas fa-user"></i>
                                </span>
                            </div>
                            <input type="text" class="form-control" name="contact[name]" placeholder="Name">
                        </div>
                    </div>

                    <div class="form-group mx-sm-2">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">
                                    <i class="fas fa-at"></i>
                                </span>
                            </div>
                            <input type="text" class="form-control" name="contact[email]" placeholder="Email">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>

    <div class="contacts">
        <table class="table table-sm">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i = 0; i < contacts.length; i++) { %>
                    <tr>
                        <td style="width: 300px"><%= contacts[i].name %></td>
                        <td style="width: 400px"><%= contacts[i].email %></td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="/contacts/<%= contacts[i]._id %>">Details</a>
                            <a class="btn btn-secondary btn-sm" href="/contacts">Talk</a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</section>
<% include ../exit %>
<% include ../footer %>